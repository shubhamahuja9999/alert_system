generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AnomalyLog {
  id               String   @id @default(uuid())
  tourist_id       String
  anomaly_type     String
  alert_level      String
  confidence_score Float
  latitude         Float
  longitude        Float
  timestamp        DateTime
  raw_evidence     Json
  model_version    String
  hash             String
  createdAt        DateTime @default(now())
}
